pipeline {

    agent { label "sl7" }

/*

    triggers {
        cron("* * * * 1")
    }

*/

    stages {

        stage("Benchmark"){
            checkout scm
            sh """
                conda create --name py python=3.6.0 -y
                conda activate py
                python -m pip install --upgrade --user pip
                python -m pip install numpy
                CALL "%VS2019_VCVARSALL%" x86_amd64
                python -m pip install .

            """
        }

    }
}