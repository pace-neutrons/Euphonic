#!groovy

pipeline {

    agent { label "SCARF" }

    triggers {
        cron("* * * * 1")
    }

    stages {

        stage("Benchmark"){
            checkout scm
            sh """
                cd tests_and_analysis/performance_benchmarking &&
                sbatch run_benchmark_tests.sbatch
            """
        }

    }

    post {
        cleanup {
            deleteDir()
        }
    }
}
